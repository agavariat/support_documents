<odoo>
    <data>
        <record id="account.action_move_in_invoice_type" model="ir.actions.act_window">
            <field name="name">Bills</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="account.view_in_invoice_tree"/>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="domain">[('is_support_document', '=', False), ('move_type', '=', 'in_invoice')]</field>
            <field name="context">{'default_move_type': 'in_invoice'}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a vendor bill
              </p><p>
                Create invoices, register payments and keep track of the discussions with your vendors.
              </p>
            </field>
        </record>

        <record id="view_account_journal_form_inherit_support_documents" model="ir.ui.view">
            <field name="name">account.journal.form.account.journal.form</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="model">account.journal</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="is_support_document"/>
                </xpath>
            </field>
        </record>

        <record id="view_move_form_inherit_support_documents" model="ir.ui.view">
            <field name="name">account.move.account.move.form</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="is_support_document" invisible='1'/>
                </xpath>
            </field>
        </record>

        <record id="action_move_in_invoice_type_support_documents" model="ir.actions.act_window">
            <field name="name">Support Documents</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="account.view_in_invoice_tree"/>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="domain">[('is_support_document', '=', True), ('move_type', '=', 'in_invoice')]</field>
            <field name="context">{'default_move_type': 'in_invoice', 'is_support_document': True}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a support document
              </p><p>
                Create support document, register payments and keep track of the discussions with your vendors.
              </p>
            </field>
        </record>

        <menuitem
            name="Support Documents"
            id="menu_action_move_in_invoice_type_support_documents"
            action="action_move_in_invoice_type_support_documents"
            parent="account.menu_finance_payables"
            sequence="1"
        />
    </data>
</odoo>

